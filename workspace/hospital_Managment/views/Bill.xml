<odoo>
	#Bill Form view

	<record id="view_bill_form" model="ir.ui.view">

		<field name="name">bill.form</field>
		<field name="model">hospital.bill</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="patient_id" widget='selection'></field>
						<field name='visit_charge' readonly='1'></field>
						<field name='medicines_charge'></field>
						<field name='lab_charge'></field>
						<field name='total_amount'></field>

					</group>
				</sheet>
			</form>
		</field>
	</record>


</odoo>